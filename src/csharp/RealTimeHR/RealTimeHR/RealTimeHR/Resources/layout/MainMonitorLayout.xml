<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:deviceIds="wear">
    <LinearLayout
        android:id="@+id/MainRootLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxedEdges="all">
        <TextView
            android:id="@+id/MainCautionText"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#F76868"
            android:text="This data is not recorded" />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/HeartbeatAnimationView"
            android:layout_centerInParent="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            app:lottie_fileName="lottie/heartbeat.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="false" />
        <TextView
            android:id="@+id/RealTimeHRData"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#F76868"
            android:text="Measuring" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:background="@drawable/button_shape"
            android:text="Setting"/>
    </LinearLayout>
</ScrollView>