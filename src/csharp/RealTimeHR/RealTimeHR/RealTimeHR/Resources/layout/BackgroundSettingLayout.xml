<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MonitoringRootLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/monitoring_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"/>
    <Switch
        style="@style/Widget.Wear.RoundSwitch"
        android:id="@+id/MonitoringSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchPadding="8dp"
        android:text="@string/text_enable"/>

    <LinearLayout
        android:id="@+id/IntervalSettingLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="center">

        <NumberPicker
            android:id="@+id/IntervalNumberPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/text_minute"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>
